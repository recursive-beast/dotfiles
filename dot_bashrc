# ~/.bashrc: executed by bash(1) for non-login shells.
# see /usr/share/doc/bash/examples/startup-files (in the package bash-doc)
# for examples

# If not running interactively, don't do anything
case $- in
	*i*) ;;
	*) return;;
esac

BASHRC_SHOULD_CLEAR=true

# source bashrc modules
source ~/.bashrc.d/_init.sh
source ~/.bashrc.d/aliases.sh
source ~/.bashrc.d/bash-git-prompt.sh
source ~/.bashrc.d/pyenv.sh
source ~/.bashrc.d/nvm.sh
source ~/.bashrc.d/composer.sh

[ $BASHRC_SHOULD_CLEAR = true ] && clear

unset BASHRC_SHOULD_CLEAR
